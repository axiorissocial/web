# Database configuration
DATABASE_URL="file:./dev.db"

# GitHub Integration
GITHUB_CLIENT_SECRET="ENTER_SECRET_HERE" # Leave blank to disable GitHub login option
GITHUB_CLIENT_ID="ENTER_ID_HERE" # Leave blank to disable GitHub login option
# Optional: explicitly set the callback URL GitHub will redirect to after auth.
# Example: GITHUB_CALLBACK_URL="https://yourdomain.com/api/auth/github/callback"
# If unset, the server will use FRONTEND_URL + '/api/auth/github/callback' or derive from the request (not recommended in production).
GITHUB_CALLBACK_URL=""

# Server Port
PORT=3001

# Secrets
SESSION_SECRET="CHANGE_THIS"
MESSAGE_ENCRYPTION_KEY="CHANGE_THIS"

# URLs
FRONTEND_URL="http://192.168.1.xxx:5173" # Change the Xs to match your IP.