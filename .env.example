# Database configuration
DATABASE_URL="file:./dev.db"

# GitHub Integration
GITHUB_CLIENT_SECRET="ENTER_SECRET_HERE" # Leave blank to disable GitHub login option
GITHUB_CLIENT_ID="ENTER_ID_HERE" # Leave blank to disable GitHub login option
# Optional: explicitly set the callback URL GitHub will redirect to after auth.
# Example: GITHUB_CALLBACK_URL="https://yourdomain.com/api/auth/github/callback"
# If unset, the server will use FRONTEND_URL + '/api/auth/github/callback' or derive from the request (not recommended in production).
GITHUB_CALLBACK_URL=""

# Server Port
PORT=3001

# Secrets
SESSION_SECRET="CHANGE_THIS"
MESSAGE_ENCRYPTION_KEY="CHANGE_THIS"

# URLs
FRONTEND_URL="http://192.168.1.xxx:5173" # Change the Xs to match your IP.

# Optional: Frontend URL for client-side use (e.g., for Open Graph tags)
# If not set, will use window.location.origin
VITE_FRONTEND_URL="http://192.168.1.xxx:5173" # Should match FRONTEND_URL

# Vite HMR / Cloudflare Tunnel settings (example)
# When exposing Vite through a Cloudflare Tunnel, set these so the HMR client connects
# back to the public host (wss). Use wss + port 443 when the tunnel terminates TLS.
VITE_HMR_PROTOCOL=wss
VITE_HMR_HOST=your-public-host.example.com
VITE_HMR_PORT=443
PUBLIC_HOST=your-public-host.example.com